@model WebForum.Models.Thread

@{
    ViewData["Title"] = "Details";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsHidden)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsHidden)
        </dd>
        <dt class="col-sm-2">
            Tags
        </dt>
        <dd class="col-sm-10">
            @if (Model.ThreadTopics.Any())
            {
                @string.Join(", ", Model.ThreadTopics.Select(tt => tt.Topic.Name))
            }
            else
            {
                <span>None</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>

<hr />

<h3>Posts</h3>
@if (Model.Posts.Any())
{
    @foreach (var post in Model.Posts)
    {
        <div class="card md-3">
            <div class="card-body">
                <h5 class="card-title">
                    @Html.DisplayFor(modelItem => post.Author.Username) - @Html.DisplayFor(modelItem => post.CreatedAt)
                </h5>
                <p class="card-text">@Html.DisplayFor(modelItem => post.Text)</p>
                @if (!string.IsNullOrEmpty(post.PhotoPath))
                {
                    <img src="@post.PhotoPath" class="img-fluid" alt=""/>
                }
                <div class="mt-2">
                    <a asp-controller="Post" asp-action="Edit" asp-route-id="@post.Id">Edit Post</a> |
                    <a asp-controller="Post" asp-action="Delete" asp-route-id="@post.Id">Delete Post</a>
                </div>
                @* Отображение комментариев к посту*@
                @if (post.Comments.Any())
                {
                    <div class="mt-2">
                        <h6>Comments:</h6>
                        @foreach (var comment in post.Comments)
                        {
                            <div class="card card-body bg-light p-2">
                                <small>
                                    <strong>@Html.DisplayFor(modelItem => comment.Author.Username)</strong> - @Html.DisplayFor(modelItem => comment.CreatedAt)
                                </small>
                                <p class="mb-1">@Html.DisplayFor(modelItem => comment.Text)</p>
                                @if (!string.IsNullOrEmpty(comment.PhotoPath))
                                {
                                    <img src="@comment.PhotoPath" class="img-fluid img-thumbnail" style="max-width: 200px;" alt="Comment Image" />
                                }
                                <div class="mt-1">
                                    <a asp-controller="Comment" asp-action="Edit" asp-route-id="@comment.Id">Edit</a> |
                                    <a asp-controller="Comment" asp-action="Delete" asp-route-id="@comment.Id">Delete</a>
                                </div>
                            </div>
                        }
                    </div>
                }
                
                <div class="mt-2">
                    <a asp-controller="Comment" asp-action="Create" asp-route-postId="@post.Id">Add Comment</a>
                </div>
            </div>
        </div>   
    }
}
else
{
    <p>No posts yet.</p>
}

<div class="mt-3">
    <a asp-controller="Post" asp-action="Create" asp-route-threadId="@Model.Id">Add New Post</a>
</div>